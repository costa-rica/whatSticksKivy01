<LoginWindow>:
    name: "login"

	email: email
	password: password
    MDCard:
        size_hint: None, None
        size: root.width-20, root.height-20
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'
		#background_normal:''
		md_bg_color: 127/255,160/255,189/255,1

        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: -2
        
		MDLabel:
            id: wsh
            text: "what-sticks-health.com"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 0
			pos_hint: {"x":0.0, "y":.1}
			
        MDTextFieldRound:
            id: email
            hint_text: "username"
			text: "nickapeed@yahoo.com"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 12
            pos_hint: {"center_x":0.5}

        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x":0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.loginBtn()
			#on_press: app.get_user()
			#on_press: root.invalidLogin()

        MDRoundFlatButton:
            text: "Clear"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.clear()

        Widget:
            size_hint_y: None
            height: 10


